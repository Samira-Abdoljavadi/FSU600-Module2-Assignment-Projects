@model IEnumerable<FSU600_DATA_STORAGE_AND_MODELLING.Models.Apartments>

@{
    ViewData["Title"] = "Apartments List";
}

<h1>Apartments List</h1>

<p>
    <a asp-action="Create">Add New Apartment</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                City
            </th>
            <th>
                Zone
            </th>
            <th>
                Street
            </th>
            <th>
                Rooms
            </th>
            <th>
                Area<br />(m²)
            </th>
            <th>
                Floor
            </th>
            <th>
                Rent<br />(SEK/month)
            </th>
            <th>
                Publish Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td style="padding:10px;">
                @if (item.ImageUrl != null)
                {
                    <img src="@Url.Content(item.ImageUrl)" alt="Image" @*width="10" height="10"*@ />
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rooms)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SquareMeters)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Floor) of @Html.DisplayFor(modelItem => item.WholeFloor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
